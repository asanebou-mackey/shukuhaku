<div class="container room-show">
    <div class="row">
        <div class="col-md-8">
          <%= image_tag @room.image, class: "room-show-image" %>
            <div class="room-show-detile">
                <div class="room-show-detile-icon">
                    <a href="/"><img class="host-icon" src="/assets/default_icon.jpg"></a>
                </div>
                <div class="room-show-profile">
                    <p class="room-show-profile-name"><%= @room.name %></p>
                    <p class="room-show-profile-address"><%= @room.address %></p>
                </div>
            </div>
            <p class="room-show-detile-content"><%= @room.introduce %></p>
        </div>
        <div class="col-md-4">
            <div class="room-show-nav">
                <h5 class="price-icon"><%= @room.price %> / 日</h5>
                <div class="room-show-date-select">
                  <%= form_with model: @reservation,method: :get, url: new_reservation_path do |f| %> <%#method: :post, url: reservations_confirm_path　遷移先がconfirm.html.erbの場合 %>
                    <%= f.label :start ,"開始日" %>
                    <%= f.date_field :start, class: "form-control mb-4" %>
                    <%= f.label :end ,"終了日" %>
                    <%= f.date_field :end, class: "form-control mb-4" %>
                    <%= f.label :number ,"人数" %>
                    <%= f.text_field :number, class: "form-control mb-4" %>
                    <input type="hidden" name="room_id" id="room_id" value="58">
                    <%= f.hidden_field :user_id, value: current_user.id %>
                    <%= f.hidden_field :room_id, value: @room.id %>
                    <%= f.hidden_field :price, value: @room.price %>
                    <%= f.submit "予約する", class: "btn btn-primary form-control"%>
                  <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
