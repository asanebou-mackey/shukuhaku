<div class="container-fiuld user">
    <div class="row">
        <div class="col-md-12 user-view">
            <div class="user-view-box">
                <div class="update-content">
                    <div class="row">
                        <label class="col-md-3" for="room">予約した部屋</label>
                        <div class="col-md-9"><%= @room.name %></div>
                    </div>
                </div>
                <div class="update-content">
                    <div class="row">
                        <label class="col-md-3" for="start_date">開始日</label>
                        <div class="col-md-9"><%= @reservation.start %></div>
                    </div>
                </div>
                <div class="update-content">
                    <div class="row">
                        <label class="col-md-3" for="end_date">終了日</label>
                        <div class="col-md-9"><%= @reservation.end %></div>
                    </div>
                </div>
                <div class="update-content">
                    <div class="row">
                        <label class="col-md-3" for="end_date">価格</label>
                        <div class="col-md-9"><%= @totalprice %></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>